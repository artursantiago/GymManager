{% extends 'layout.njk' %}

{% block content %}
  <div class="card table-container">
    <a href="/members/create">New</a>
    <table>
      <thead>
        <tr>
          <th>Members</th>
          <th>Services</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {% for member in members %}
          <tr>
            <td>
              <span style="background-image: url({{member.avatar_url}})"></span>
              {{member.name}}
            </td>
            <td>
              {% for service in member.services %}
                <span>{{service}}</span>
              {% endfor %}
            </td>
            <td><a href="/members/{{member.id}}">View</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}