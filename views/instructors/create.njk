{% extends 'layout.njk' %}

{% block content %}
  <form class="card" method="POST" action="/instructors">
    <section 
      class="avatar" 
      style="background: url(https://source.unsplash.com/collection/9374406/500x500) no-repeat center center / cover;"></section>
    <section class="details">
      <h3>New Instructor</h3>
      
      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input 
            type="url"
            name="avatar_url"
            placeholder="http://"
          >
        </div>
      </div>

      <div class="item">
        <div>Instructor</div>
        <div>
          <input 
            type="text"
            name="name"
            placeholder="Instructor name"
            >
        </div>
      </div>

      <div class="item">
        <div>Date of Birth</div>
        <div>
          <input 
            type="date"
            name="birth"  
          >
        </div>
      </div>

      <div class="item">
        <div>Gender</div>
        <div>
          <span>
            <input 
                type="radio"
                name="gender"
                value="M"
                checked
              >
              Male
          </span>
          <span>
            <input 
                type="radio"
                name="gender"
                value="F"
              >
              Female
          </span>
        </div>
      </div>

      <div class="item">
        <div>Field</div>
        <div>
          <input 
            type="text"
            name="services"
            placeholder="Type your field(s) of work separated by comma."
          >
        </div>
      </div>

      <button type="submit">Salvar</button>

    </section>
  </form>
{% endblock %}